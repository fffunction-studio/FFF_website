{# Default page #}

{% extends "core/base.twig" %}

{% block main %}

  <section class="header-offset">
    <div class="container">

      <div class="row">
        <div class="col w-full md:w-10/12 lg:w-6/12">
          <div class="w-full pb-8 lg:pb-0">
            {% include "components/_figure.twig" with {
              image : entry.studioPictures.all()[0]
            } %}
          </div>

          <div class="w-full pb-8 mx-auto md:w-10/12 lg:w-8/12 lg:mt-2/12 lg:pb-0">
            {% include "components/_figure.twig" with {
              image : entry.studioPictures.all()[1]
            } %}
          </div>

        </div>
        <div class="col w-full md:w-10/12 md:ml-2/12 lg:w-5/12 lg:ml-1/12 flex flex-col justify-center">
          <div class="w-full">
            {% include "components/_figure.twig" with {
              image : entry.studioPictures.all()[2]
            } %}
          </div>
        </div>
      </div>

    </div>
  </section>

  {#  #}

  <section class="section text-white">
    <div class="container my-16 md:my-20 lg:my-40">

      <div class="row anim-move-in ">
        <div class="col w-full md:w-10/12 lg:w-8/12 mx-auto" style="max-width: 880px;">

          <p class="text-xlarge">
            {{ entry.introText }}
          </p>

        </div>
      </div>

    </div>
  </section>

  {#  #}

  <section class="section bg-white text-black" data-anim-from-color="#0C0C0C" data-anim-to-color="#F8F8F8" data-anim-hook="0.75">
    <div class="container my-16 md:my-20 lg:my-40">

      {% for item in entry.whatWeDo %}

        <div class="anim-move-in mb-20" data-anim-hook="0.75">
          <div class="row mb-4">
            <div class="col w-full md:w-5/12 md:ml-1/12 md:mr-6/12 lg:w-4/12 lg:ml-2/12 lg:mr-6/12">
              <h2 class="text-large">{{ item.caption }}</h2>
            </div>
          </div>

          <div class="row">
            <div class="col w-full md:w-5/12 md:ml-1/12 lg:w-3/12 lg:ml-2/12 lg:mr-1/12">
              <p class="text-regular">
                {{ item.text }}
              </p>
            </div>
            <div class="col w-full mt-8 md:w-5/12 lg:w-4/12 lg:mr-2/12 md:mt-0">
              <p class="text-regular opacity-50">
                {{ item.keywords }}
              </p>
            </div>
          </div>
        </div>

      {% endfor %}

    </div>
  </section>

  {#  #}

  <section class="section bg-white text-black">
    <div class="container mb-40">

      <div class="row">
        <div class="col w-full md:w-10/12 lg:w-8/12 mx-auto">
          <h1 class="text-xlarge font-bold mb-10 lg:mb-20">Founders</h1>

          {# <div class="flex justify-between"> #}
          <div class="row justify-center">
            {% for item in entry.founders %}
              
             <div class="col anim-move-in w-8/12 mb-8 md:w-4/12 md:mb-0" data-anim-delay="{{ 200 * loop.index0 }}">
              {% include "components/_figure.twig" with {
                image:item.image.first()
              } %}
              <p class="text-regular mt-2 md:mt-4">
               {{ item.fullName }}
              </p>
            </div>

          {% endfor %}

          </div>
        </div>
      </div>

    </div>
  </section>

{% endblock %}
