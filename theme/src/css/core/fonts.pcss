* {
  @apply font-sans leading-normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  @apply font-bold leading-tight;
}


.text-regular {
  @apply text-lg;
}

.text-large {
  @apply text-xl;
}

.text-xlarge {
  @apply text-2xl;
}

.text-2xlarge {
  @apply text-6xl;
}